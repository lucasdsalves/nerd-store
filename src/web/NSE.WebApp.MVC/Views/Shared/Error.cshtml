@model NSE.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "An error has occured.";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! An error has occured. But dont worry, our team will be notified and we will fix it soon. </h2>
        </div>
    }
    else
    {
        ViewData["Title"] = Model.Title;

        <div>
            <h2>@Html.Raw(Model.Message)</h2>
        </div>

    }
}
